<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane onKeyReleased="#onKeyReleased" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MathQuizzer.Quiz.QuizController">
    <Label fx:id="expression" text="Expression" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
    <Button fx:id="showAnswer" text="Show Answer" onAction="#showAnswer" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="TOP" />
    <Label fx:id="answer" text="Answer" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP" />
    <Button fx:id="next" text="Next" onAction="#newProblem" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="TOP" />
    <Button fx:id="back" text="Back" onAction="#back" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="TOP" />
   <columnConstraints>
      <ColumnConstraints percentWidth="33.0" />
      <ColumnConstraints percentWidth="34.0" />
      <ColumnConstraints percentWidth="33.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints percentHeight="40.0" />
      <RowConstraints percentHeight="20.0" />
      <RowConstraints percentHeight="40.0" />
      <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" />
   </rowConstraints>
</GridPane>
