<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane onKeyReleased="#onKeyReleased" prefHeight="400.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="MathQuizzer.Quiz.QuizController">
    <Label fx:id="expression" alignment="CENTER" prefHeight="50.0" prefWidth="597.0" text="Expression"
           GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <font>
            <Font size="40.0"/>
        </font>
    </Label>
    <Button fx:id="showAnswer" onAction="#showAnswer" text="Answer" GridPane.columnIndex="0" GridPane.halignment="RIGHT"
            GridPane.rowIndex="2" GridPane.valignment="TOP">
        <font>
            <Font size="16.0"/>
        </font>
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
    <Label fx:id="answer" text="Answer" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2"
           GridPane.valignment="TOP">
        <font>
            <Font size="32.0"/>
        </font>
    </Label>
    <Button fx:id="next" onAction="#newProblem" text="Next" GridPane.columnIndex="2" GridPane.halignment="LEFT"
            GridPane.rowIndex="2" GridPane.valignment="TOP">
        <font>
            <Font size="16.0"/>
        </font>
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
    <Button fx:id="back" onAction="#back" text="Back" GridPane.columnIndex="0" GridPane.halignment="LEFT"
            GridPane.rowIndex="3" GridPane.valignment="BOTTOM">
        <font>
            <Font size="16.0"/>
        </font>
        <GridPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </GridPane.margin>
    </Button>
    <columnConstraints>
        <ColumnConstraints percentWidth="30.0"/>
        <ColumnConstraints percentWidth="40.0"/>
        <ColumnConstraints percentWidth="30.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="32.0"/>
        <RowConstraints percentHeight="20.0"/>
        <RowConstraints percentHeight="32.0"/>
        <RowConstraints percentHeight="16.0"/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
